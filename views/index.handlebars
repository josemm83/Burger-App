<div class="container">
  <div class="jumbotron">
    <img src="/assets/img/burger.png" width="100px" height="100px">
    <h1>Eat Some Burgers!</h1>
  </div>

  <div class="row text-white">
    <div class="col-md-4 col-md-offset-1">
      <h2>Burgers ready to be devoured!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
            <button type="button" class="eatburger btn btn-warning" id="eatbutton" data-id="{{this.id}}"
            data-newDevoured="{{devour}}">
            Devour It!
            </button>
            <hr>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-md-4 col-md-offset-1">
      <h2>Burgers that have been eaten!</h2>
      <ul>
        {{#each burgers}}
          {{#if devoured}}     
            <span><strong>{{this.id}} - {{this.burger_name}}</strong></span>
            <hr>
          {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="col-md-10 col-md-offset-1 add">
    <h2 class="text-white">Add a Burger</h2>
    <form class="create-form">
      <div class="form-group">
        <label class="text-white" for="newburger"><h4>Insert the type of burger you would like to eat:</h4></label>
        <input type="text" id="newburger" name="burger" placeholder="Burger Name" required>
        <button class="btn btn-primary btn-lg" type="submit" id="addburger">Add Burger</button>
      </div>
    </form>
  </div>
</div>