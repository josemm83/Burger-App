<div class="container">
  <div class="jumbotron">
    <img src="/assets/img/burger.png" width="100px" height="100px">
    <h1>Eat Some Burgers!</h1>
    </div>

  <div class="row text-white">
    <div class="col-md-4 col-md-offset-1">
      <h2>Burgers ready to be devoured!</h2>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <form action="burgers/eat/{{id}}">
              <div class="input-group">
                <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-success devour-button" type="submit">Devour It!</button>
                </span>
              </div>
            </form>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

